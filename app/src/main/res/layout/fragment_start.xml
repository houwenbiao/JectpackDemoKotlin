<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="welcomeViewModel"
            type="com.qtimes.jetpackdemokotlin.viewmodel.WelcomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/start_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="jump desc"
            android:src="@drawable/bg_welcome"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_jump"
            android:layout_width="@dimen/y120"
            android:layout_height="@dimen/y60"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginEnd="@dimen/x20"
            android:background="@drawable/welcome_btn_shape"
            android:text='@{"跳过  " + welcomeViewModel.timerCount + " s"}'
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/x18"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y40"
            android:gravity="center"
            android:text="成年人的世界里哪有容易二字"
            android:textColor="@color/txt_welcome_title"
            android:textSize="@dimen/x28"
            app:layout_constraintBottom_toBottomOf="@id/start_bg" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>